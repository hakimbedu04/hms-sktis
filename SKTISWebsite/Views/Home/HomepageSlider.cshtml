@using HMS.SKTIS.Core
@model IEnumerable<SKTISWebsite.Models.Home.SliderNewsInfoViewModel>

@if (@Model.Any())
{
    <div id="CarouselIndex" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @foreach (var item in Model.Select((slider, index) => new { index, slider }))
            {
                <li data-target="#myCarousel" data-slide-to="@item.index" class="@(item.index==0 ? "active":"")"></li>
            }
        </ol>
        <div class="carousel-inner" role="listbox">
            @foreach (var item in Model.Select((slider, index) => new { index, slider }))
            {
                <div class="item @(item.index==0 ? "active":"")">
                    <a href="@Url.Action("Details", "News", new { id = item.slider.NewsId })">
                        <img src="@Url.Content(Constants.UploadPathNews + item.slider.Image)" alt="@item.slider.Title">
                        <div class=" description">
                            <h3>@item.slider.Title</h3>
                            <p>@item.slider.ShortDescription</p>
                        </div>
                    </a>
                </div>
            }

        </div>
        <a class="left carousel-control" href="#CarouselIndex" role="button" data-slide="prev">
            <span class="fa fa-angle-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#CarouselIndex" role="button" data-slide="next">
            <span class="fa fa-angle-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}
