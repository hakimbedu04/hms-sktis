                                @foreach (var res in ViewBag.listResponsibility)
                                {
                                    if (res.ResponsibilityName == ViewBag.ResponName)
                                     {
                                        <li class="active">
                                            <span>@res.ResponsibilityName</span>
                                        </li>                                    
                                    }else{
                                        <li>
                                            <a href="@Url.Action("SettingResponsibilityManual", "Home", new { id = res.IDResponsibility })">@res.ResponsibilityName</a>
                                        </li>
                                    }
                                }
                                <li>
                                    <a href="@Url.Action("Logout", "Login")">Sign Out</a>
                                </li>
                            </ul>
                        </li>
                        <li role="presentation" class="dropdown setting">
