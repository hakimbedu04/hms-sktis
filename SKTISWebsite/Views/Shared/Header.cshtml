<header>
    <div class="navbar navbar-default navbar-static-top" role="navigation">
        <div class="row">
            <div class="col-lg-12">
                <div class="navbar-header">
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                        <div class="logo-mini">
                            <img src="@Url.Content("~/content/assets/images/logo-skt.png")" alt="SKT">
                        </div>
                        <div class="logo-lg">
                            <img src="@Url.Content("~/content/assets/images/logo-skt.png")" alt="SKT">
                            <span>SKT-IS</span>
                        </div>
                    </a>
                    <div id="toggle-hide">
                        <i class="fa fa-bars"></i>
                    </div>
                    
                    @* Please move this to SASS/CSS version, thanks! *@
                    @* -- Rob *@
                    <style>
                        .navbar-default .navbar-header #myaccount .dropdown-menu li a {
                            float: none;
                        }

                        .navbar-default .navbar-header #myaccount .dropdown-menu li.active {
                            background: #1F4E78;
                            color: white;
                        }

                        .navbar-default .navbar-header #myaccount .dropdown-menu li.active span {
                            display: block;
                            padding: 10px;
                        }
                    </style>

                    <ul id="myaccount" class="nav navbar-nav pull-right">
                        <li class="account">
                            <a href="#" role="button" data-toggle="dropdown" aria-expanded="true">
                                <div class="image">
                                    <img src="@Url.Content("~/content/assets/images/profil.png")">
                                    @*<img src="@Url.Content(@profile)">*@
                                </div>
                                <p class="name">@Html.Name()</p>
                                @*<p class="name">@((User as CustomPrincipal).Username)</p>*@
                            </a>
